<!-- Plantilla EJS para renderizar las tarjetas de imágenes -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 p-20 m-4 opacity-20 hover:transition-all duration-500 ease-out transform hover:translate-y-10 hover:opacity-80">
  
  <% apiData.results.forEach(image => { %>
    <div class="relative w-full overflow-hidden rounded-lg shadow-md transition: transition-all ease-out duration-300 transform hover:scale-90 hover:translate-x-4">
      <!-- Imagen con sombra -->
      <img src="<%= image.urls.regular %>" alt="<%= image.alt_description %>" class="w-full h-96 object-cover" /> <!-- Ajusta 'h-96' según tu preferencia de altura -->

      <!-- Detalles de la imagen -->
      <div class="absolute inset-0 flex flex-col justify-center items-center p-4 bg-black bg-opacity-60 transition-opacity opacity-0 hover:opacity-100">
        <!-- Likes -->
        <div class="flex items-center text-white mb-2">
          <img class="w-4 mr-2" src="https://cdn-icons-png.flaticon.com/512/3128/3128313.png">
          <p><%= image.likes %> Likes</p>
        </div>

        <!-- Botón de "Leer Más" -->
        <a href="<%= image.links.html %>" target="_blank" class="block bg-pink-500 text-white py-2 px-4 rounded-full text-center hover:bg-black font-bold hover:">
          Leer Más
        </a>
      </div>
    </div>
  <% }); %>
</div>

      
